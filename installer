#!/bin/sh
echo Welocome to ScriptPKG installer!
echo Please select directory to install spkg.
read spkgpatch
echo Please select directory to install scripts.
read sdir
cd $spkgpatch
wget https://raw.githubusercontent.com/Pan00Pernicek/scriptpkg/master/spkg
chmod +x spkg
cd ~/.config/
mkdir spkg
cd spkg
touch destination
echo $sdir >> destination
mkdir packages
cd packages
touch spkg
echo https://raw.githubusercontent.com/Pan00Pernicek/scriptpkg/master/spkg/url > spkg
echo $spkgpatch"/destination" >> spkg
cd ..
mkdir repos
cd repos
touch main
echo https://raw.githubusercontent.com/Pan00Pernicek/scriptpkg/master/repos/main > main
echo everything done
